var question = ["Столица Канады?","Самый большой город в мире?", "Самый интересный язык программирования?"]  
var answer = ["1)Торонто  2)Оттава  3)Ванкувер", "1)Шанхай  2)Токио  3)Москва", "1)Phyton   2)Java  3)JavaScript"]
var riht = ["2", "1", "3"]
for(i=0; i<=2; i++){
    alert(question[i])
    var int= +prompt("Выберите правильный ответ:   "+answer[i])
    if(int==riht[i]) alert("Поздравляем!!!")
    else alert ("Попробуйте еще раз:(")   
}